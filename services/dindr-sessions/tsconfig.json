{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "composite": false,
    "baseUrl": ".",
    "paths": {
      "@dindr/contracts": ["../../packages/contracts/src/index.ts"],
      "@dindr/contracts/*": ["../../packages/contracts/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist"]
}
